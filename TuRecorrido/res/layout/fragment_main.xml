<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:background="@drawable/degradado"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.turecorrido.MainActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="158dp" >
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lineaHorizontal3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rectangulo" />

    <view
        android:id="@+id/lineaHorizontal0"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/relativeLayout1"
        android:background="#D8D8D8" />

    <view
        android:id="@+id/lineaHorizontal1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#D8D8D8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineaHorizontal1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView4"
        android:gravity="center"
        android:text="Eliminar Cuenta"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lineaHorizontal"
        android:layout_alignRight="@+id/textView2"
        android:text="Modificar Cuenta"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <view
        android:id="@+id/lineaHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/lineaHorizontal1"
        android:layout_marginTop="56dp"
        android:background="#D8D8D8" />

    <view
        android:id="@+id/lineaHorizontal3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="62dp"
        android:background="#D8D8D8" />

    <view
        android:id="@+id/lineaHorizontal2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/view1"
        android:layout_marginBottom="19dp"
        android:background="#D8D8D8" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineaHorizontal2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Cuenta"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="Seleccione una OpciÃ³n :"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/Cuenta"
                    android:layout_width="301dp"
                    android:layout_height="572dp" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Transito"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</RelativeLayout>